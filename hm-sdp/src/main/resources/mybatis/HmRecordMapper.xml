<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xxwl.tk.main.dao.mapper.HmRecordMapper">
	<!-- 注意：1. BaseResultMap 与底层架构有关,除数据库变更.严禁人为修改. -->
	<resultMap id="BaseResultMap"  type="com.xxwl.tk.main.entity.HmRecordEntity">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="datestr" property="datestr" jdbcType="VARCHAR" />
		<result column="inmoney" property="inmoney" jdbcType="DOUBLE" />
		<result column="outmoney" property="outmoney" jdbcType="DOUBLE" />
		<result column="cuid" property="cuid" jdbcType="INTEGER" />
		<result column="cdate" property="cdate" jdbcType="TIMESTAMP" />
		<result column="changeuid" property="changeuid" jdbcType="INTEGER" />
		<result column="changedate" property="changedate" jdbcType="TIMESTAMP" />
		<result column="isvoid" property="isvoid" jdbcType="INTEGER" />
	</resultMap>

	<sql id="allColumn">
		id,datestr,inmoney,outmoney,cuid,cdate,changeuid,changedate,isvoid
	</sql>

	<insert id="doAdd"  parameterType="com.xxwl.tk.main.entity.HmRecordEntity" >
    	 insert into hm_record ( 
 <if test="null != datestr"  >datestr,</if>
<if test="null != inmoney"  >inmoney,</if>
<if test="null != outmoney"  >outmoney,</if>
<if test="null != cuid"  >cuid,</if>
<if test="null != cdate"  >cdate,</if>
<if test="null != changeuid"  >changeuid,</if>
<if test="null != changedate"  >changedate,</if>
 
 isvoid) values ( 
<if test="null != datestr"  >#{datestr},</if>
<if test="null != inmoney"  >#{inmoney},</if>
<if test="null != outmoney"  >#{outmoney},</if>
<if test="null != cuid"  >#{cuid},</if>
<if test="null != cdate"  >#{cdate},</if>
<if test="null != changeuid"  >#{changeuid},</if>
<if test="null != changedate"  >#{changedate},</if>
 
 #{isvoid})
  	</insert>
  	
	<insert id="doAddBatch"  parameterType="java.util.List" >
    	insert into hm_record (
					<if test="null != e.datestr"  >
						 datestr,
					</if>
					<if test="null != e.inmoney"  >
						 inmoney,
					</if>
					<if test="null != e.outmoney"  >
						 outmoney,
					</if>
					<if test="null != e.cuid"  >
						 cuid,
					</if>
					<if test="null != e.cdate"  >
						 cdate,
					</if>
					<if test="null != e.changeuid"  >
						 changeuid,
					</if>
					<if test="null != e.changedate"  >
						 changedate,
					</if>
			 isvoid
		 ) values
		 <foreach collection="list" item="item" index="index"  separator=",">
				(

						<if test="null != item.datestr"  >
						 	#{item.datestr},
						</if>

						<if test="null != item.inmoney"  >
						 	#{item.inmoney},
						</if>

						<if test="null != item.outmoney"  >
						 	#{item.outmoney},
						</if>

						<if test="null != item.cuid"  >
						 	#{item.cuid},
						</if>

						<if test="null != item.cdate"  >
						 	#{item.cdate},
						</if>

						<if test="null != item.changeuid"  >
						 	#{item.changeuid},
						</if>

						<if test="null != item.changedate"  >
						 	#{item.changedate},
						</if>

			 #{item.isvoid}
			 )
		
		</foreach>
  	</insert>
  	
	<update id="doUpdate"   parameterType="com.xxwl.tk.main.entity.HmRecordEntity" >
	    update 
	    	hm_record
	    <set>
					<if test="null != datestr"  >
						 datestr = #{datestr,jdbcType=VARCHAR},
					</if>
					<if test="null != inmoney"  >
						 inmoney = #{inmoney,jdbcType=DOUBLE},
					</if>
					<if test="null != outmoney"  >
						 outmoney = #{outmoney,jdbcType=DOUBLE},
					</if>
					<if test="null != cuid"  >
						 cuid = #{cuid,jdbcType=INTEGER},
					</if>
					<if test="null != cdate"  >
						 cdate = #{cdate,jdbcType=TIMESTAMP},
					</if>
					<if test="null != changeuid"  >
						 changeuid = #{changeuid,jdbcType=INTEGER},
					</if>
					<if test="null != changedate"  >
						 changedate = #{changedate,jdbcType=TIMESTAMP},
					</if>
					<if test="null != isvoid"  >
						 isvoid = #{isvoid,jdbcType=INTEGER},
					</if>
	    </set>
	     <where>
						 id =#{id,jdbcType=INTEGER}
		</where>
	 </update>
	 
     	
  	<delete id="doDelete"  >
  		delete  from 
  			hm_record
	  	<where> 
	  		id 
	  	=
			#{id}
		</where>
    </delete>
    
  	<delete id="doDeletes"  parameterType="java.util.List" >
  		delete  from 
  			hm_record
	  	<where> 
	  		id 
	  	in 
			<foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
				#{item}
			</foreach>
		</where>
    </delete>
    
    <update id="doRemove" parameterType="com.xxwl.tk.main.entity.HmRecordEntity"  >
    	update 
    		hm_record
    	set isvoid = 0
	    <if test="changeuid != null" >
	      ,changeuid = #{changeuid}
	    </if>
	    <choose>
	      <when test="changedate != null">
	        ,changedate = #{changedate}
	      </when>
	      <otherwise>
	        ,changedate = NOW()
	      </otherwise>
	    </choose>
	     <where>
		     id = #{id}
		</where>
  	</update>
  		
   <select id="getById" resultMap="BaseResultMap" >
	    select
      		<include refid="allColumn" />
      	from 
      		hm_record
	    <where>
		    id = #{id}
		</where>
  </select>
  
  	<select id="getByIds" resultMap="BaseResultMap" parameterType="java.util.List">
	  	select
      		<include refid="allColumn" />
      	from 
      		hm_record
	  	<where> 
	  		id 
	  	in 
			<foreach collection="list" item="item" index="index" open="(" close=")" separator=",">
				#{item}
			</foreach>
		</where>
  	</select>
  
   <select id="getCount" resultType="java.lang.Long">
      select count(*) from hm_record
      <if test="_parameter != null">
          <include refid="sqlCriCondition"/>
      </if>
  </select>  
  
  <select id="queryForList" resultMap="BaseResultMap">
      select
      <include refid="allColumn" />
      from hm_record
      <if test="_parameter != null">
        <include refid="sqlCriCondition"/>
        <include refid="sortSql"/>
        <include refid="com.xxwl.tk.framework.dao.CommonMapper.pagingLimit"/>
      </if>
  </select>
  
  <select id="queryForPageList" resultMap="BaseResultMap">
      select
      <include refid="allColumn" />
      from hm_record
      <if test="_parameter != null">
        <include refid="sqlCriCondition"/>
        <include refid="sortSql"/>
        <include refid="com.xxwl.tk.framework.dao.CommonMapper.pagingLimit"/>
      </if>
  </select>
  
 

  <!--条件查询时 日期默认= 字符默认like 其他默认= 需要进行其他逻辑处理请自行更改-->
  <sql id="sqlCriCondition">
  	<where>
  	 1=1
		<if test="null != id">
			AND id = #{id,jdbcType=INTEGER}
		</if>	
		<if test="null != datestr and datestr != ''">
			AND datestr LIKE CONCAT('%', #{datestr,jdbcType=VARCHAR}, '%')
		</if>
		<if test="null != inmoney">
			AND inmoney = #{inmoney,jdbcType=DOUBLE}
		</if>	
		<if test="null != outmoney">
			AND outmoney = #{outmoney,jdbcType=DOUBLE}
		</if>	
		<if test="null != cuid">
			AND cuid = #{cuid,jdbcType=INTEGER}
		</if>	
		<if test="null != cdate and cdate != ''">
			AND cdate = #{cdate,jdbcType=TIMESTAMP}
		</if>
		<if test="null != changeuid">
			AND changeuid = #{changeuid,jdbcType=INTEGER}
		</if>	
		<if test="null != changedate and changedate != ''">
			AND changedate = #{changedate,jdbcType=TIMESTAMP}
		</if>
		<if test="null != isvoid">
			AND isvoid = #{isvoid,jdbcType=INTEGER}
		</if>	
  	</where>
  </sql>  
  
    <sql id="sortSql">
        order by
        <choose>
            <when test="sortItemMap == null">
                cdate desc
            </when>
            <otherwise>
                <foreach collection="sortItemMap.keySet()" item="field" separator=",">
                    <choose>
						<when test="field == 'datestr'">
			                 datestr ${sortItemMap.datestr}
			            </when>
						<when test="field == 'inmoney'">
			                 inmoney ${sortItemMap.inmoney}
			            </when>
						<when test="field == 'outmoney'">
			                 outmoney ${sortItemMap.outmoney}
			            </when>
						<when test="field == 'cuid'">
			                 cuid ${sortItemMap.cuid}
			            </when>
						<when test="field == 'cdate'">
			                 cdate ${sortItemMap.cdate}
			            </when>
						<when test="field == 'changeuid'">
			                 changeuid ${sortItemMap.changeuid}
			            </when>
						<when test="field == 'changedate'">
			                 changedate ${sortItemMap.changedate}
			            </when>
						<when test="field == 'isvoid'">
			                 isvoid ${sortItemMap.isvoid}
			            </when>
						<otherwise>
							id asc
						</otherwise>
					</choose>
                </foreach>
            </otherwise>
        </choose>
    </sql>  

<update id="doUpdateInmoney"   parameterType="com.xxwl.tk.main.entity.HmRecordEntity" >
	    update 
	    	hm_record
	    <set>
			inmoney =inmoney+#{inmoney,jdbcType=DOUBLE}
	    </set>
	     <where>
			datestr = #{datestr,jdbcType=VARCHAR}
		</where>
</update>
<update id="doUpdateOutmoney"   parameterType="com.xxwl.tk.main.entity.HmRecordEntity" >
	    update 
	    	hm_record
	    <set>
			outmoney =outmoney+#{outmoney,jdbcType=DOUBLE},
	    </set>
	     <where>
			datestr = #{datestr,jdbcType=VARCHAR}
		</where>
</update>
</mapper>